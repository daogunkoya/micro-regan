{{>main}}
<div class = "container">
        <h2>Edit Details</h2> 
        <div class="row">
                <div class = "col-md-9 col-md-offset-1 well well-lg">
                   <form method= "post" action = "/members/edit">
                        	
                        <div class="row">
                            <div class="col-md-4">
                                  <div class = "form-group">
                                    <label>Title</label>
                                    <Select name = "title" class="form-control">
                                        <option>Mr</option>
                                        <option>Mrs</option>
                                        <option>Miss</option>
                                    </Select>
                                </div>
                            </div>

                             <div class="col-md-4 col-md-offset-2">
                                  <div class = "form-group">
                                    <label>Type</label>
                                    <Select name = "type" class="form-control">
                                        <option>Member</option>
                                        <option>Officer</option>
                                        <option>Admin</option>
                                       
                                    </Select>
                                </div>
                            </div>
                        </div>
<!--Names -->               <input type = "hidden" name ="username" value={{user.username}}>
                        <div clas="row">
                                    <div class="col-md-6">
                                        <div class = "form-group">
                                                <label>First Name</label>
                                            <input type = "text" name = "fname" placeholder = "First Name" value = "{{data.member.fname}}"  class="form-control">
                                        </div>
                                     </div>

                                     <div class="col-md-6">
                                        <div class = "form-group">
                                                <label>Last Name</label>
                                               <input type = "text" name = "lname" value = "{{data.member.lname}}" placeholder = "Last Name" class="form-control">
                                        </div>
                                    </div>
                        </div>
<!--Address -->
                        <div clas="row">
                                    <div class="col-md-12">
                                        <div class = "form-group">
                                                 <label>Address</label>
                                               <input type = "text" name = "address" value = "{{data.member.address}}" placeholder = "Address" class="form-control">
                                        </div>
                                </div>
                        </div>
 <!--Email & Phone -->
                        <div clas="row">
                                    <div class="col-md-6">
                                        <div class = "form-group">
                                                 <label>Email</label>
                                                <input type = "text" name = "email" value = "{{data.member.email}}" placeholder = "Email" class="form-control">
                                        </div>
                                     </div>

                                     <div class="col-md-6">
                                        <div class = "form-group">
                                                 <label>Phone</label>
                                                <input type = "text" name = "phone" value = "{{data.member.phone}}" placeholder = "Phone" class="form-control">
                                        </div>
                                    </div>
                        </div>
                         
<!--Group & Credit officer -->
                          <div clas="row">
                                    <div class="col-md-6">
                                        <div class = "form-group">
                                                 <label>Group</label>
                                                <Select name= "group" class="form-control">
                                                
                                                    {{#if data.group}}
                                                         {{#each data.group}}
                                                            
                                                             <option value = "{{_id}}">{{name}}</option>
                                                          {{/each}}
                                                    {{/if}}
                                                </Select>
                                        </div>
                                     </div>

                                     <div class="col-md-6">
                                        <div class = "form-group">
                                                <label>Credit Officer</label>
                                               <Select name= "creditofficer" class="form-control">
                                               
                                                    {{#if data.creditofficer}}
                                                            {{#each data.creditofficer}}
                                                                <option value = "{{_id}}"> {{username}}</option>
                                                            {{/each}}
                                                        
                                                    {{/if}}
                                                </Select>
                                        </div>
                                    </div>
                        </div>
                         <div clas="row">
                                    <div class="col-md-6 col-md-offset-5">
                                        <div class = "form-group">
                                            <input type = "submit" value = "Submit" class = "btn btn-primary">
                                                
                                        </div>
                                     </div>  
                        </div> 
                </div>
  <!--Submit -->
                         
                    </form>
                    
         </div>
</div>
