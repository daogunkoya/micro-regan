{{>main}}
<div class="container">
	

<!-- Saving -->
<button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal">
  Repayments
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Loan Repayment</h4>
      </div>
      <div class="modal-body">
        			 {{#if errors}}
	                                {{#each errors}}
	                                	<div class="text-center">
	                                    	<p class=" well well-sm text-danger"><strong>{{msg}}</strong></p>
	                                    </div>
	                                {{/each}}
	                 {{/if}}

				<div class="text-center">
					<form method = "post" action= "/members/repayment">
							<div class="form-group">
								<label>Amount</label>
								<input name = "id" type ="hidden" value = {{id}}>
								<input name = "groupid" type ="hidden" value = {{member.groupid}}>
								<input name = "creditofficerid" type ="hidden" value = {{member.creditofficerid}}>
								<input name = "loanid" type ="hidden" value = {{loanid}}>
								<input name = "repayment" type ="hidden" value = {{member.repayment}}>
								<input name = "loan" type ="hidden" value = {{member.loan}}>
								<input name = "amount" type ="text" placeholder="Amount To Repay" class="form-control">
							</div>

							<div class="form-group">
								<input type = "submit", value = "Submit" class="btn btn-primary" style= "width:100%">
								 <button type="button" class="btn btn-default" style= "width:100%"  data-dismiss="modal">Close</button>
							</div>
					</form>
					</div>
      </div>
      
    </div>
  </div>
</div><p>
<!--Search Form -->
		 	<div class="row">
		 		<form method="post" name="search"  action="/searchs/member/repayment">
		 			<input name = "id" type ="hidden" value = {{id}}>
		 			<input name = "loanid" type ="hidden" value = {{loanid}}>
			 		<div class="col-md-10  well well-lg">
			 			<div class="row">
			 				<div class="col-md-5">
			 					<div class="input-group">
			 						 <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			 						<input id="dateFrom" name="dateFrom" type="text" placeholder="Select Date from 12/03/2017" class="form-control">
			 					</div>
			 				</div>
			 				<div class="col-md-5">
			 					<div class="input-group">
			 						 <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			 						<input id="dateTo"  name="dateTo" type="text" placeholder="Select Date To 4/4/2017" class="form-control">
			 					</div>
			 				</div>
			 			</div><p>
			 			<div class="row">
			 				<div class="col-md-2">
			 					<input name= "option" type="radio" value = "date" checked>Date
			 				</div>
			 				<div class="col-md-2">
			 					<input name= "option" type="radio" value = "today">Today
			 				</div>
			 				<div class="col-md-2">
			 					<input name= "option" type="radio" value = "yesterday">Yesterday
			 				</div>
			 				<div class="col-md-2">
			 					<input name= "option" type="radio" value = "1week">1 Week Ago
			 				</div>
			 				<div class="col-md-2">
			 					<input name= "option" type="radio" value = "amonth">A Month Ago
			 				</div>
			 				<div class="col-md-2">
			 					<input type = "submit" value = "Search" class="btn btn-info"
			 				</div>
			 				</div>
			 			</div>
		 		</div>
		 		</form>
		 	</div>

<!-- group list -->
		<h3>{{member.fname}} {{member.lname}}, Repayment History Loan:<strong class="text-danger">&#8358;{{member.loan}}</strong></h3>
		<div class = "row">
			<div class="col-md-10">
				<table class= "table table-striped">
					<tr>
						<thead>	
							<th>No</th>
							<th>Date</th>
							<th>Loan Id</th>
							<th>Paid</th>
							<th>Status</th>
							<th>Balance</th>
						</thead>
						<tbody>
								 
							{{#if repayment}}
								{{#each repayment}}
									<tr>
										<td>  1 </td>	
										<td>{{date}}</td>
										<td>{{loanid}}</td>
										<td>{{amount}}</td>
										<td><strong>{{Payment}}</strong></td>
										<td>{{balance}}</td>
										<td>{{status}}</td>
										<td><a href ="#" class="btn btn-primary confirm-repayment" data-id= "{{_id}}" data-value = "{{status}}" >Confirm</a></td>
										<td><a href ="#" class="btn btn-danger delete-repayment" data-id = "{{_id}}" > Delete</a></td>
									</tr>
								{{/each}}
							{{/if}}
						</tbody>
					</tr>

				</table>
			</div>
		</div>

	</div>