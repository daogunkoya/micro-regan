{{>main}}
<div class="container">
	

<!-- Saving -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  New Deposite
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New Deposite</h4>
      </div>
      <div class="modal-body">
        			 {{#if errors}}
	                                {{#each errors}}
	                                	<div class="text-center">
	                                    	<p class=" well well-sm text-danger"><strong>{{msg}}</strong></p>
	                                    </div>
	                                {{/each}}
	                 {{/if}}

				<div class="text-center">
					<form method = "post" action= "/members/newsaving">
							<div class="form-group">
								<label>Amount</label>
								<input name = "id" type ="hidden" value = {{id}}>
								<input name = "name" type ="hidden" value = "{{member.fname}} {{member.lname}}">
								<input name = "groupid" type ="hidden" value = {{member.groupid}}>
								<input name = "creditofficerid" type ="hidden" value = {{member.creditofficerid}}>
								<input name = "amount" type ="text" placeholder="Amount To Deposite" class="form-control">
							</div>

							<div class="form-group">
								<input type = "submit", value = "Submit" class="btn btn-primary" style= "width:100%">
								 <button type="button" class="btn btn-default" style= "width:100%"  data-dismiss="modal">Close</button>
							</div>
					</form>
					</div>
      </div>
    </div>
  </div>
</div>
<!-- Modal ends here -->
<p>
 <!--Search Form -->
		 	<div class="row">
		 		<form method="post" name="search"  action="/searchs/member/saving">
		 			<input name = "id" type ="hidden" value = {{id}}>
			 		<div class="col-md-10  well well-lg">
			 			<div class="row">
			 				<div class="col-md-5">
			 					<div class="input-group">
			 						 <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			 						<input id="dateFrom" name="dateFrom" type="text" placeholder="Select Date from 12/03/2017" class="form-control">
			 					</div>
			 				</div>
			 				<div class="col-md-5">
			 					<div class="input-group">
			 						 <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			 						<input id="dateTo"  name="dateTo" type="text" placeholder="Select Date To 4/4/2017" class="form-control">
			 					</div>
			 				</div>
			 			</div><p>
			 			<div class="row">
			 				<div class="col-md-2">
			 					<input name= "option" type="radio" value = "date" checked>Date
			 				</div>
			 				<div class="col-md-2">
			 					<input name= "option" type="radio" value = "today">Today
			 				</div>
			 				<div class="col-md-2">
			 					<input name= "option" type="radio" value = "yesterday">Yesterday
			 				</div>
			 				<div class="col-md-2">
			 					<input name= "option" type="radio" value = "1week">1 Week Ago
			 				</div>
			 				<div class="col-md-2">
			 					<input name= "option" type="radio" value = "amonth">A Month Ago
			 				</div>
			 				<div class="col-md-2">
			 					<input type = "submit" value = "Search" class="btn btn-info"
			 				</div>
			 				</div>
			 			</div>
		 		</div>
		 		</form>
		 	</div>

<!-- group list -->
		<h3>{{member.fname}} {{member.lname}},</h3>
		<strong><u>Saving Account,</u> <span class="text-success">Balance: {{member.balance}}</span></strong>
		<div class = "row">
			<div class="col-md-7 col-md-offset-1">
				<table class= "table table-striped">
					<tr>
						<thead>
							<th>No</th>
							<th>Date</th>
							<th>Name</th>
							<th>Deposit</th>
							<th>Withdraw</th>
							<th>Balance</th>
						</thead>
						<tbody>
							{{#if savings}}
								{{#each savings}}
									<tr>
										<td>{{no}}</td>
										<td>{{date}}</td>
										<td>{{name}}</td>
										<td>{{Deposit}}</td>
										<td>{{Withdraw}}</td>
										<td>{{balance}}</td>
									</tr>
								{{/each}}
							{{/if}}
						</tbody>
					</tr>

				</table>
			</div>
		</div>

	</div>