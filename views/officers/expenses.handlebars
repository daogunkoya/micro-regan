{{>main}}
<div class="container">
	

        <div class="row">
                <div class="col-md-8 col-md-offset-1">
            {{#if officerGroup}}            
                        <div class="panel panel-primary">
                                <div class="panel-heading">
                                        <h4>Officer Expenses</h4>
                                    </div>
                                    <div class="panel-body">
                                        <form name= "form1" method="post" action="/officers/expenses">
                                                <div class="form-group">
                                                        <label>Expense Name</label><span class="text-danger"> *</span>
                                                        <input  type="hidden" name="id" value ="{{id}}" >
                                                        <input  type="hidden" name="fname" value ="{{member.fname}}">
                                                         <input  type="hidden" name="lname" value ="{{member.lname}}">
                                                        <select name="name" class="form-control" placeholder="name of expense">
                                                                <option>General</option>
                                                                <option>Stationaries</option>
                                                                <option>Transportation</option>
                                                                <option>Miscellaneous</option>
                                                         </select>
                                                    </div>

                                                    <div class="form-group">
                                                        <label>Description</label> <span class="text-danger"> *</span>
                                                        <input  type="text" name="description" class="form-control" placeholder="Description of expense">
                                                    </div>

                                                    <div class="form-group">
                                                        <label>Date</label> <span class="text-danger"> *</span>
                                                        <input  type="text" name="date" id="dateFrom" class="form-control" placeholder="Date">
                                                    </div>

                                                    <div class="form-group">
                                                        <label>Total</label> <span class="text-danger"> *</span>
                                                        <input type="text"  name="total" class="form-control" placeholder="name of expense">
                                                    </div>
                                                    <div class="form-group">
                                                       
                                                        <input  type="submit" class="btn btn-primary btn-block" placeholder="name of expense">
                                                    </div>
                                            </form>
                                    </div>
                            </div>
                {{/if}}
                    </div>
            </div>

<!-- List recent Expenses -->
                <h3 >Expenses</h3>
                <div class="row">
                                <div class="col-md-8 col-md-offset-1">
                                        <table class="table table-striped">
                                                <tr>
                                                        <thead>
                                                                <th>No</th>
                                                                {{#if adminGroup}}
                                                                        <th>Officer</th>
                                                                {{/if}}
                                                                <th>Name</th>
                                                                <th>Description</th>
                                                                <th>Total</th>
                                                                <th>Clear</th>
                                                        </thead>
                                                </tr>
                                                <tbody>
                                                      {{#if expenses}}
                                                        {{#each expenses}}
                                                         <tr>
                                                                <td> {{no}}</td>
                                                                <td>{{name}}</td>
                                                                <td> {{expensename}}</td>
                                                                <td> {{description}}</td>
                                                                <td> {{total}}</td>
                                                                <td><a href ="#" class="btn btn-danger btn-block delete-expense" data-id={{_id}}><span class="glyphicon glyphicon-trash"></span> Clear</a></tr>
                                                         </tr>
                                                        {{/each}}
                                                      {{/if}}  
                                                </tbody>
                                        </table>
                                 </div>
                 </div>

	</div>